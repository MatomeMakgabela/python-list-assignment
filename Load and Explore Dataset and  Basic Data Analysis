import pandas as pd
import matplotlib.pyplot as plt

# 1. Load CSV dataset with error handling
try:
    df = pd.read_csv("data.csv")   # â† Replace with your CSV file name
    print("Dataset loaded successfully.\n")
except FileNotFoundError:
    print("âŒ Error: The file was not found. Please check the file name.")
    raise
except Exception as e:
    print("âŒ An unexpected error occurred:", e)
    raise

# 2. Show first rows
print("ğŸ“Œ First 5 rows:")
display(df.head())

# 3. Check structure and missing values
print("\nğŸ“Œ Dataset info:")
print(df.info())

print("\nğŸ“Œ Missing values:")
print(df.isnull().sum())

# 4. Clean dataset (fill missing values or drop)
df = df.dropna()     # Alternatively: df.fillna(0)
print("\nğŸ“Œ Missing values after cleaning:")
print(df.isnull().sum())


